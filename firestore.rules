rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Community Posts Collection
    match /communityPosts/{postId} {
      // Anyone can read community posts
      allow read: if true;
      
      // Only authenticated users can create posts
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.userName is string
                    && request.resource.data.title is string
                    && request.resource.data.title.size() > 0
                    && request.resource.data.crop is string
                    && request.resource.data.likes == 0
                    && request.resource.data.comments == 0;
      
      // Only the post owner can update their own posts
      allow update: if request.auth != null
                    && request.auth.uid == resource.data.userId;
      
      // Only the post owner can delete their own posts
      allow delete: if request.auth != null
                    && request.auth.uid == resource.data.userId;
    }
    
    // User Quick Crops Collection
    match /users/{userId}/quickCrops/{cropId} {
      // Users can only read/write their own crops
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fallback for other collections (temporary - will expire)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 12, 1);
    }
  }
}
